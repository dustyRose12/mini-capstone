<% if @errors %>
  <div id="error-explanation"
  <% @errors.each do |error| %>
    <h2><%= error %></h2>
  <% end %>
  </div>
<% end %>

<h1>New Purse</h1>
<%=form_tag "/purses", method: :post do %>
  <div>
    Name: <input type="text" name="name" value="<%= @purse.name %>" placeholder="whatever you want here">
  </div>

   <div>
    Price: <input type="text" name="price" value="<%= @purse.price %>">
  </div> 
  <div>
    Image: <input type="text" name="image">
  </div>
   <div>
    Description: <input type="text" name="description" value="<%= @purse.description %>">
  </div>
  <input type="submit" value="Create Purse">
  <div>
    Supplier:
    <select name="supplier_id">
    <% @suppliers.each do |supplier| %>
        <option value= "<%= supplier.id %>"> <%= supplier.name %></option>
     <% end %>
      </select> 
  </div>

  <% end %>